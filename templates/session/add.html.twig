{% extends 'base.html.twig' %}

{% block title %}Formulaire des Sessions{% endblock %}

{% block body %}
{% if edit %}
<h1> Edit Session </h1>
{%else%}
<h1> Ajout Session </h1>
{%endif%}
{% for message in app.flashes('error') %}
    <div class="flash-notice">
        {{ message }}
    </div>
{% endfor %}
{{ form_start(formSession) }}
  {{ form_row(formSession.titre) }}
  {{ form_row(formSession.nb_places) }}
  {{ form_row(formSession.date_debut) }}
  {{ form_row(formSession.date_fin) }}
{{ form_end(formSession) }}
{% endblock %}