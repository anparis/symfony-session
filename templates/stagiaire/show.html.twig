{% extends 'base.html.twig' %}

{% block title %}Detail du stagiaire{% endblock %}

{% block body %}
<main>
  <div class="intern">
  <article>
    <div class="intern-details">
      <article>
        <div class="edit-intern">
          <h4>{{stagiaire}}</h4>
          <button class="edit big-btn"><a href="{{ path('edit_stagiaire', {'id': stagiaire.id} ) }}">‚úç</a></button>
        </div>
        <p>mail: {{stagiaire.email}}</p>
        <p>tel: {{stagiaire.tel}}</p>
        <p>ville: {{stagiaire.ville}}</p>
        <p>date de naissance: {{stagiaire.datenaissance | date('d/m/Y')}}</p>
        <p>sexe: {{stagiaire.sexe}}</p>
      </article>
 
   {% if stagiaire.sessions is not empty %}
   <div class="sessions-list">
     {% for session in stagiaire.sessions %}
     <div class="session">
     <a href="{{path('show_session', {'id': session.id})}}">
     <article>
       <p class="date">Du {{ session.dateDebut | format_datetime('long', 'none', locale='fr') }} au {{
         session.dateFin | format_datetime('long', 'none', locale='fr')}}</p>
       <h4>{{ session.titre}} </h4>
     </article>
     </a>
   </div>
     {% endfor %}
   </div>
   {% endif %}
  </article>
  </div>
 </main>
{% endblock %}